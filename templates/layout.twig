{% import 'app/macro/form.twig' as form %}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="{{ asset('favicon.ico') }}" type="image/x-icon">

    <title>{% block title %}Slim Skeleton{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/app.css') }}">
    {% endblock %}
</head>
<body>
    {% block navbar %}
        {% include 'app/_navbar.twig' %}
    {% endblock %}

    {% block flash %}
        {% include 'app/_flash.twig' %}
    {% endblock %}

    {% block body %}{% endblock %}

    {% block javascript %}
        <script src="{{ asset('assets/app.js') }}"></script>
    {% endblock %}
</body>
</html>
