<div id="edit-user-modal" aria-hidden="true" aria-labelledby="edit-user-modal-title" class="modal fade" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="edit-user-modal-title">Halda kasutajakontot</h5>
                <button aria-label="Close" class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="edit-user-form" action="{{ path_for('edit-user') }}"method="POST">
                    <div class="form-group">
                        <label for="edit-user-email">Email</label>
                        <input class="form-control" id="edit-user-email" type="email" name="email" value="{{ user.email }}">
                    </div>
                    <div class="form-group">
                        <label for="edit-user-firstname">Eesnimi</label>
                        <input class="form-control" id="edit-user-firstname" type="text" name="firstname" value="{{ user.firstname }}">
                    </div>
                    <div class="form-group">
                        <label for="edit-user-lastname">Perenimi</label>
                        <input class="form-control" id="edit-user-lastname" type="text" name="lastname">
                    </div>
                    <div class="custom-checkbox form-group">
                        <label for="admin">Admin</label>
                        <input id="edit-user-role" type="checkbox" name="admin" value="admin">
                    </div>
                    <input type="hidden" name="id" id="edit-user-id"></input>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-danger">Kustuta kasutaja</button>
                        <button class="btn btn-secondary" data-dismiss="modal" type="button">TÃ¼hista</button>
                        <button class="btn btn-primary" type="submit" name="editUser">Muuda</button>
                    </div>
                </form>
            </div>
            
        </div>
    </div>
</div>