<div id="new-user-modal" aria-hidden="true" aria-labelledby="new-user-modal-title" class="modal fade" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="new-timeline-modal-title">Lisa uus toimetaja</h5>
                <button aria-label="Close" class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="new-user-form" action="{{ path_for('add-user') }}" method="POST">
                    <div class="form-group">
                        <label for="email">E-Mail</label>
                        <input class="form-control" id="new-user-email" type="text" name="email">
                    </div>
                    <div class="form-group">
                        <label for="passwrd">Salasõna</label>
                        <textarea class="form-control" id="new-user-password" name="text" name="password">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-dismiss="modal" type="button">Tühista</button>
                <button id="new-user-form-button" class="btn btn-primary" type="button">Lisa</button>
            </div>
        </div>
    </div>
</div>