{% extends 'layout.twig' %}

{% block body %}
{% if auth.check() %}
    {% include 'app/_new_timeline_modal.twig' %}
    {% include 'app/_edit_timeline_modal.twig' %}
{% endif %}
<div class="container mt-3">
  {% if timelines|length > 0 %}
    <div class="float-right">
      <span class="fa fa-search form-control-feedback"></span>
      <input type="text" class="form-control" placeholder="Search">
    </div>
  {% endif %}
    <div class="row mt-4">
        <div class="col">
            <h3>Ajajooned</h3>
        </div>
        {% if auth.check() %}
            <div class="col text-right">
                <a class="btn btn-dti" href="#" data-toggle="modal" data-target="#new-timeline-modal" >+ Lisa ajajoon</a>
            </div>
        {% endif %}
    </div>
    <div class="row mt-4">
        {% if timelines|length == 0 %}
            <div class="col">
                <div class="jumbotron">
                    <div class="container">
                        <h1 class="display-4">Pole 端htegi ajajoont :(</h1>
                        {% if auth.check() %}
                            <p class="lead">Palun lisa uus ajajoon, et alustada s端ndmuste lisamist.</p>
                            <a class="btn btn-dti btn-lg" data-target="#new-timeline-modal" data-toggle="modal" href="#">Lisa ajajoon</a>
                        {% else %}
                            <p class="lead">Ajajooned lisatakse peatselt.</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% else %}
            {% if auth.check() %}
                {% for timeline in timelines %}
                    <div class="col-4">
                        <div class="card">
                            <div class="card-header">
                                {{ timeline.name }}
                            </div>
                            <div class="card-body">
                                <p>{{ timeline.description }}</p>
                                <p>
                                    <small>
                                        S端ndmusi: {{ timeline.events_count }}<br>
                                        Viimati muudetud: {{ timeline.updated_at|date("d.m.Y") }}
                                    {% if timeline.private == true %}<i>Privaatne</i>{% endif %}
                                    </small>                           
                                </p>
                                <a href="{{ path_for('timeline', {'id': timeline.id}) }}">Ava ajajoon</a>
                                <button type="button" class="btn btn-outline-danger float-right deleteTimelineButton" data-id="{{ timeline.id }}">Kustuta</button>
                                <button type="button" id="editTimelineButton" class="btn btn-primary editBtn" data-id="{{ timeline.id }}"
                                data-name="{{ timeline.name }}" data-description="{{ timeline.description }}" data-private="{{ timeline.private }}">Muuda</button>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                {% for timeline in timelines %}
                    {% if timeline.private == false %}
                        <div class="col-4">
                        <div class="card">
                            <div class="card-header">
                                {{ timeline.name }}
                            </div>
                            <div class="card-body">
                                <p>{{ timeline.description }}</p>
                                <p>
                                    <small>
                                        S端ndmusi: {{ timeline.events_count }}<br>
                                        Viimati muudetud: {{ timeline.updated_at|date("d.m.Y") }}
                                    </small>                           
                                </p>
                                <a href="{{ path_for('timeline', {'id': timeline.id}) }}">Ava ajajoon</a>
                                <button type="button" class="btn btn-outline-danger float-right deleteTimelineButton" data-id="{{ timeline.id }}">Kustuta</button>
                                <button type="button" id="editTimelineButton" class="btn btn-primary editBtn" data-id="{{ timeline.id }}"
                                data-name="{{ timeline.name }}" data-description="{{ timeline.description }}" data-private="{{ timeline.private }}">Muuda</button>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                {% endfor %}
            {% endif %}
        {% endif %}
    </div>
</div>
{% endblock %}
