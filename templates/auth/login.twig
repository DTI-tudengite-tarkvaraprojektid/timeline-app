{% extends 'layout.twig' %}

{% block body %}

<div class="container mt-3">
    <h3>Logi sisse! </h3>
    <form class="mt-3" action="{{ path_for('login') }}" method="POST">
        {% if has_errors() %}
            <div class="alert alert-danger">
                {% for error in errors('auth') %}
                    <span>{{ error }} </span>
                {% endfor %}
            </div>
        {% endif %}
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control{% if has_error('auth') %} is-invalid{% endif %}" id="email" name="email" placeholder="Sisesta email">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control{% if has_error('auth') %} is-invalid{% endif %}" id="password" name="password" placeholder="Sisesta parool">
        </div>
        <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" name="remember" id="remember">
            <label class="custom-control-label" for="remember">JÃ¤ta meelde</label>
        </div>
        {{ csrf() }}
        <button type="submit" class="btn btn-primary">Logi sisse</button>
    </form>
</div>

{% endblock %}
